<h3>Recent Conversations <span class="badge">{{model.length}}</span></h3>
<hr> {{#each model as |c|}}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">{{link-to c.title 'conversations.show' c.id}}
            {{!--<span class="glyphicon glyphicon-remove"  style="cursor: pointer" {{ action "deleteConv" c}}></span>--}}
        </h3>
    </div>
    <div class="panel-body">
        {{c.content}}
    </div>
    <div class="panel-footer">
        {{link-to 'view more...' 'conversations.show' c.id}}
    </div>
</div>
{{/each}}